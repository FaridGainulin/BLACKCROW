.reasons-section
  background-image: url('../images/reasons-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #1F2425

  &__container
    position relative
    padding 20px 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 60px 0 50px 50px
    +above($breakpoints.md)
      padding 80px 0 70px 70px
    +above($breakpoints.xxl)
      padding 100px 0 88px 100px

  &__title
    line-height 115% !important

  &__sub-title
    padding 15px 0 20px 0
    +above($breakpoints.sm)
      padding 20px 0 30px 0
    +above($breakpoints.md)
      padding 25px 0 35px 0
    +above($breakpoints.xxl)
      padding 30px 0 40px 0

  &__title-padding
    +above($breakpoints.sm)
      padding-left 200px
    +above($breakpoints.md)
      padding-left 300px
    +above($breakpoints.xxl)
      padding-left 400px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column

  &__card
    position relative
    z-index 1
    width 280px !important
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    padding 15px 0 0 0
    border-top: 1px solid #434343
    +above($breakpoints.sm)
      width: 670px !important;
      flex-direction: row;
      align-items: flex-start;
      gap: 115px;
      padding: 15px 0 20px 0;
    +above($breakpoints.md)
      width: 860px !important;
      gap: 135px;
      padding: 20px 0 30px 0;
    +above($breakpoints.xxl)
      width 980px !important
      height: 145px
      gap: 138px
      padding 26px 0 36px 0
    &:after
      content: ""
      position: absolute
      z-index: -1
      background-color #6B009B
      top: -2px
      left: 0
      width 100px
      height: 2px
      +above($breakpoints.sm)
        width 160px
        height: 3px
        top: -3px
      +above($breakpoints.md)
        width 170px
      +above($breakpoints.xxl)
        width 180px
        height: 4px
        top: -4px
  
  &__card-title
    +above($breakpoints.sm)
      width 150px
    +above($breakpoints.md)
      width 200px
    +above($breakpoints.xxl)
      width 250px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    margin-top 20px
    +above($breakpoints.sm)
      margin-top 25px
      flex-direction: row
      align-items: flex-start
      gap: 132px
    +above($breakpoints.md)
      margin-top 30px
      gap: 138px
    +above($breakpoints.xxl)
      margin-top 33px
      gap: 170px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 380px
      flex-direction: row
      flex-wrap: wrap
      gap: 8px
    +above($breakpoints.md)
      width 450px
      gap: 10px
    +above($breakpoints.xxl)
      width 516px
      gap: 14px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 380px !important
      +above($breakpoints.md)
        width 450px !important
      +above($breakpoints.xxl)
        width 516px !important
    & > :nth-child(3),
    & > :nth-child(4)
      +above($breakpoints.sm)
        width 186px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 251px !important
