.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    background-color #0F0F0F
    padding 6px 10px
    +above($breakpoints.sm)
      padding 6px 20px
    +above($breakpoints.md)
      padding 6px 25px
    +above($breakpoints.xxl)
      padding 6px 30px

  &__brand-block
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column

  &__logo
    width 60px
    height: auto
    +above($breakpoints.sm)
      width 62px
    +above($breakpoints.md)
      width 64px
    +above($breakpoints.xxl)
      width 66px

  &__connection
    display: flex
    align-items: center
    gap: 5px;
    +above($breakpoints.sm)
      gap: 7px;
    +above($breakpoints.md)
      gap: 8px;
    +above($breakpoints.xxl)
      gap: 9px

  &__connection-icon
    width 15px
    height: 15px
    +above($breakpoints.sm)
      width 16px
      height: 16px
    +above($breakpoints.md)
      width 17px
      height: 17px
    +above($breakpoints.xxl)
      width 16px
      height: 16px
