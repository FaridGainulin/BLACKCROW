.details-section
  // background-image: url('../images/details-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #161616

  &__container
    position relative
    padding 20px 0 10px 0
    +above($breakpoints.sm)
      padding 50px 0 40px 0
    +above($breakpoints.md)
      padding 80px 0 70px 0
    +above($breakpoints.xxl)
      padding 100px 0 76px 0

  &__box
    +above($breakpoints.sm)
      margin-left 400px
    +above($breakpoints.md)
      margin-left 500px
    +above($breakpoints.xxl)
      margin-left 600px

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    +above($breakpoints.sm)
      line-height 115% !important

  &__sub-title
    padding 15px 0
    +above($breakpoints.sm)
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 30px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 18px

  &__card
    width 280px !important
    display: flex
    align-items: baseline
    gap: 10px
    +above($breakpoints.sm)
      width 100% !important
      gap: 15px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 22px

  &__form
    width 280px
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      width 230px
      gap: 8px
      margin-top 30px
    +above($breakpoints.md)
      width 240px
      gap: 10px
      margin-top 40px
    +above($breakpoints.xxl)
      width 251px
      gap: 14px
      margin-top 48px

  &__img
    width: 220px;
    height: auto;
    margin: 20px 0 0 16px;
    +above($breakpoints.sm)
      margin: 0;
      position: absolute;
      width: 410px;
      top: 50px;
      left: -92px;
    +above($breakpoints.md)
      width: 505px;
      top: 80px;
      left: -113px;
    +above($breakpoints.xxl)
      width 620px
      top: 100px
      left: -140px
