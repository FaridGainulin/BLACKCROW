.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #161616

  &__container
    position relative
    z-index 1
    padding 20px 0 15px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 40px 0 50px 0
    +above($breakpoints.md)
      padding 70px 0 80px 0
    +above($breakpoints.xxl)
      padding 100px 0 119px 0

  &__box
    +above($breakpoints.sm)
      margin-left 355px
    +above($breakpoints.md)
      margin-left 465px
    +above($breakpoints.xxl)
      margin-left 600px

  &__title
    padding 0 0 15px 0
    +above($breakpoints.sm)
      padding 0 0 20px 0
    +above($breakpoints.md)
      padding 0 0 30px 0
    +above($breakpoints.xxl)
      padding 0 0 35px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    height: 76px
    background-color #1F2425
    border-left: 2px solid #6B009B
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 180px !important
      height: 90px
      gap: 8px
      padding-left 20px
      align-items: flex-start
    +above($breakpoints.md)
      width 240px !important
      height: 120px
      gap: 8px
      padding-left 23px
    +above($breakpoints.xxl)
      width 280px !important
      height: 140px
      padding-left 27px
      gap: 8px

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      margin-top 40px
      flex-direction: row
      align-items: flex-end
      gap: 84px
    +above($breakpoints.md)
      margin-top 45px
      gap: 116px
    +above($breakpoints.xxl)
      margin-top 56px
      gap: 214px

  &__bottom-text
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 30px
    +above($breakpoints.md)
      gap: 23px
    +above($breakpoints.xxl)
      gap: 28px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      width 370px
      gap: 8px
    +above($breakpoints.md)
      width 470px
      gap: 10px
    +above($breakpoints.xxl)
      width 516px
      gap: 14px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 180px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 251px !important

  &__img
    width: 250px;
    height: auto;
    margin: 20px 0 0 -2px;
    +above($breakpoints.sm)
      margin: 0;
      position: absolute;
      z-index: -1;
      width: 368px;
      top: 40px;
      left: -82px;
    +above($breakpoints.md)
      width: 508px;
      top: 70px;
      left: -114px;
    +above($breakpoints.xxl)
      width 620px
      top: 100px
      left: -140px
